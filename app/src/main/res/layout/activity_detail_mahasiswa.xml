<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mahasiswa.DetailMahasiswaActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Mahasiswa"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/fotoProfilMahasiswa"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/labelNamaMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Mahasiswa"/>

            <TextView
                android:id="@+id/labelNIMMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIM Mahasiswa"/>
            <TextView
                android:id="@+id/labelTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"/>

            <TextView
                android:id="@+id/labelGenderMahasisw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"/>

            <TextView
                android:id="@+id/labelJurusanMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jurusan"/>

            <TextView
                android:id="@+id/labelAlamatMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jurusan"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>