<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perpustakaan.ListBukuActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data List Bukuu"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/totalBuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center"/>

    <EditText
        android:id="@+id/inputKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keyword Pencarian"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/buttonCariBuku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari Buku"
        android:layout_margin="5dp"
        android:layout_gravity="right"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listBukuRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>