<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perpustakaan.PerpustakaanActivity"
    android:orientation="vertical">
    <Button
        android:id="@+id/buttonImportDatabse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Import Database"/>
    <Button
        android:id="@+id/buttonTampilkanBuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Tampilkan List Buku"
        android:visibility="gone"/>
    <Button
        android:id="@+id/buttonTambahBuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Tambah Buku"
        android:visibility="gone"/>

</LinearLayout>