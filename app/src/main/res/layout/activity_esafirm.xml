<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menus.EsafirmActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonEsafirmCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image From Camera"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/previewImageEsafirmCamera"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/buttonEsafirmGalery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image From Camera"
        android:layout_margin="10dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <LinearLayout
            android:id="@+id/sliderImageEsafirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>
</LinearLayout>